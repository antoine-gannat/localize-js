{
    "compilerOptions": {
      "module": "CommonJS",
      "target": "es5",
      "lib": [ "es2015", "dom" ],
      "sourceMap": true,
      "declaration": true,
      "outDir": "lib",
      "strict": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "removeComments": true,
    },
    "include": [
      "src"
    ],
    "exclude": ["src/__tests__"]
 }
  